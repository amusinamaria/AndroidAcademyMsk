<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/cast_card_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/cast_card_padding">

    <ImageView
        android:id="@+id/actorPhoto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cast_photo_size"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/actorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/cast_name_margin_top"
        android:layout_marginEnd="@dimen/cast_name_margin_end"
        android:textColor="@color/white_gray"
        android:textSize="@dimen/textsize_12"
        android:textStyle="bold"
        tools:ignore="SpUsage"
        tools:text="@tools:sample/full_names" />
</LinearLayout>
